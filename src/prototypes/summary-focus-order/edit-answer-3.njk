---
group: Prototypes
title: Summary Focus Order
layout: summary-focus-order/views/_main
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/breadcrumbs/_macro.njk" import onsBreadcrumbs %}

{% block main %}
    {{
        onsBreadcrumbs({
            "ariaLabel": 'Breadcrumbs',
            "itemsList": [
                {
                    "url": 'summary-3.html',
                    "text": 'Back'
                }
            ]
        })
    }}
        {{
            onsRadios({
                "id": "spend-type",
                "name": "spend-type",
                "borderless": true,
                "legend": "Was this spend online or in-store?",
                "radios": [
                    {
                        "id": "online",
                        "label": {
                            "text": "Online"
                        },
                        "value": "online"
                    },
                    {
                        "id": "instore",
                        "checked": true,
                        "label": {
                            "text": "In-store"
                        },
                        "value": "instore"
                    }
                ]
            })
        }}
        {{
            onsButton({
                "text": "Save",
                "classes": "ons-u-mt-l",
                "url": pageInfo.rootPath + "/summary-4.html"
            })
        }}
{% endblock %}