---
group: Surveys
title: PRODCOM survey
layout: prodcom/views/_main
---

{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/panel/_macro.njk" import onsPanel %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/button/_macro.njk" import onsButton %}

{% set questionTitle = "For the period <em class=\"ons-highlight\">01/01/2022</em> to <em class=\"ons-highlight\">31/12/2022</em>, what was the sales value and volume of <em class=\"ons-highlight\">Limestone flux; limestone and other calcareous stone of a kind used for the manufacture of lime or cement</em>?" %}
{% set form =  {
    "method": "GET",
    "attributes": {
        "action":  pageInfo.rootPath + "/sectionAsummary"
    }
} %}

{% block main %}


    <header class="ons-patternlib-page__content-header">
        <h1 class="ons-u-fs-xl">
                <span class="ons-u-fs-m ons-u-db ons-u-mb-xs ons-u-lighter">Section A</span>
            For the period <em class="ons-highlight">1 January 2022</em> to <em class="ons-highlight">31 December 2022</em>, what were the sales value and volume of <em class="ons-highlight prepop">Limestone flux; limestone and other calcareous stone of a kind used for the manufacture of lime or cement</em>?
        </h1>
    </header>

    {% call onsQuestion({
        "guidance": {
            "lists": [
                {
                    "listHeading": "Exclude",
                    "itemsList": [
                        {
                            "text": "crushed limestone aggregate"
                        },
                        {
                            "text": "calcareous dimension stone"
                        }
                    ]
                },
                {
                    "listHeading": "Include",
                    "itemsList": [
                        {
                            "text": "limestone"
                        },
                        {
                            "text": "limestone flux"
                        },
                        {
                            "text": "travertine"
                        },
                        {
                            "text": "onyx"
                        },
                        {
                            "text": "marble"
                        }
                    ]
                }
            ]
        },
        "submitButton": true
    }) %}


<div class="ons-field">
    <label class="ons-label ons-label--with-description" for="sales-value">Value of sales</label>
    <span id="description-hint" class="ons-label__description  ons-input--with-description">Please provide your figures rounded to the nearest whole number. Enter '0', rather than leave blank</span>
    <span class="ons-input-type ons-input-type--prefix">
        <span class="ons-input-type__inner">
            <input type="text" class="ons-input ons-input--text ons-input-type__input ons-input-number--w-10" aria-labelledby="annual-salary-gpb-prefix" pattern="[0-9]*" inputmode="numeric" autocomplete="off">
            <abbr id="annual-salary-gpb-prefix" class="ons-input-type__type ons-js-input-abbr" title="British pounds (GBP)">Â£</abbr>
        </span>
    </span>
</div>


<div class="ons-field">
  <label class="ons-label ons-label--with-description" aria-describedby="description-hint" for="text">Volume of sales (<em class="ons-highlight prepop">Tonnes</em>)</label>
  <span id="description-hint" class="ons-label__description  ons-input--with-description">Please provide your figures rounded to the nearest whole number. Enter '0', rather than leave blank</span>
  <input type="text" id="text" class="ons-input ons-input--text ons-input-type__input ons-input--w-8"
    aria-describedby="description-hint" />
</div>

<div class="ons-field">
  <label class="ons-label ons-label--with-description" aria-describedby="description-hint" for="text">Total volume produced (<em class="ons-highlight prepop">Tonnes</em>)</label>
  <span id="description-hint" class="ons-label__description  ons-input--with-description">EPlease provide your figures rounded to the nearest whole number. Enter '0', rather than leave blank</span>
  <input type="text" id="text" class="ons-input ons-input--text ons-input-type__input ons-input--w-8"
    aria-describedby="description-hint" />
</div>
{% endcall %}

{% endblock %}
