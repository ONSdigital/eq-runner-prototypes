---
group: Surveys
title: PRODCOM survey
layout: prodcom/views/_hub
---

{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/question/_macro.njk" import onsQuestion %}

{% set form =  {
    "method": "GET",
    "attributes": {
        "action":  pageInfo.rootPath + "/hub"
    }
} %}

{% block main %}

{% call onsQuestion({
    "title": "Are you able to report for the calendar year 1 Jan 2022 to 31 Dec 2022?",
    "classes": "ons-u-mt-no",
    "legendIsQuestionTitle": true,
    "submitButton": true
}) %}
    {{
        onsRadios({
            "name": "property-type",
            "dontWrap": true,
            "radios": [
                {
                    "id": "yes",
                    "attributes": {
                            "data-action-url": pageInfo.rootPath + "/hub"
                        },
                    "label": {
                        "text": "Yes, I can report for this period"
                    },
                    "value": "yes"
                },
                {
                    "id": "no",
                    "attributes": {
                            "data-action-url": pageInfo.rootPath + "/dates2"
                        },
                    "label": {
                        "text": "No, I need to report for a different period"
                    },
                    "value": "no"
                }
            ]
        })
    }}
{% endcall %}

{% endblock %}
